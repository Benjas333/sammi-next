{
    "name": "eslint-plugin-sammi-next",
    "version": "1.0.0",
    "author": {
        "name": "Benjas333",
        "url": "https://github.com/Benjas333"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Benjas333/SAMMI-Next.git",
        "directory": "packages/eslint-plugin"
    },
    "main": "./lib/index.mjs",
    "exports": {
        ".": {
            "types": "./lib/index.d.mts",
            "default": "./lib/index.mjs"
        }
    },
    "description": "An ESLint plugin for projects using SAMMI Next",
    "files": ["lib/*"],
    "keywords": [
        "typescript",
        "sammi",
        "sammi-next",
        "sammi-next-eslint",
        "eslint",
        "eslintplugin",
        "eslint-plugin"
    ],
    "license": "MIT",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "lint": "bun run lint:eslint-docs && bun run lint:js",
        "lint:eslint-docs": "bun run update:eslint-docs -- --check",
        "lint:js": "eslint .",
        "test": "vitest",
        "update:eslint-docs": "eslint-doc-generator",
        "build": "tsdown",
        "prepublishOnly": "bun run build"
    },
    "devDependencies": {
        "@eslint/core": "^1.0.1",
        "@eslint/js": "^9.39.2",
        "@types/eslint": "^9.6.1",
        "@types/eslint__js": "^9.14.0",
        "@types/node": "^25.0.9",
        "@typescript-eslint/rule-tester": "^8.53.0",
        "@typescript-eslint/types": "^8.53.0",
        "eslint-doc-generator": "^3.0.2",
        "tsdown": "^0.20.0-beta.3",
        "vitest": "^4.0.17"
    },
    "dependencies": {
        "@typescript-eslint/utils": "^8.53.0",
        "eslint": "^9.39.2",
        "typescript-eslint": "^8.53.0"
    }
}
