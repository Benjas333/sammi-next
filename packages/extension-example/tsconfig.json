{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        
        "module": "esnext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        
        "outDir": "./types",
        "rootDir": "./src",
        "sourceMap": true,
        
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        // "noEmit": true,
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/**/*", "src/sammi.ts"]
}