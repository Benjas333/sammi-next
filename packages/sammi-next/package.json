    "keywords": [
        "typescript",
        "sammi",
        "sammi-next",
        "sammi-next-builder"
    ],
    "license": "MIT",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "bun run tsdown",
        "dev": "bun run tsdown --watch"
    },
    "type": "module",
    "types": "./dist/runtime/index.d.ts",
    "devDependencies": {
        "@rolldown/plugin-node-polyfills": "^1.0.0",
        "@types/node": "^25.0.9",
        "sammi-bridge-types": "workspace:sammi-bridge-types"
    }
