        },
        "./config": {
            "types": "./dist/shared/config-types.d.ts",
            "import": "./dist/shared/config-types.js"
        },
        "./global": {
            "types": "./src/runtime/global.d.ts"
        }
    },
    "bin": {
        "sammi-next": "./bin/sammi-next.mjs"
