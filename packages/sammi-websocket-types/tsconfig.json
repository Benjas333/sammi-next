{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "target": "es2022",
        "module": "node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "lib": ["DOM", "ESNext"],
        "baseUrl": ".",
        "paths": {
            "events": ["./types/events.d.ts"]
        },
        "types": []
    },
    "include": [
        "../../vendor/sammi-websocket/lib/SAMMIWebSocket.js",
        "types/**/*.d.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
